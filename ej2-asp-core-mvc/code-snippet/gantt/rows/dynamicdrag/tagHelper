		<script>
		    document.getElementById('DynamicDrag').addEventListener('click', function () {
			    var ganttObj = document.getElementById('DragAndDrop').ej2_instances[0];
                ganttObj.reorderRows([1, 2, 3], 4, 'child');
            });
		</script>